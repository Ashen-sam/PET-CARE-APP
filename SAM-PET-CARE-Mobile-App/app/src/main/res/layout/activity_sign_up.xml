<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    android:backgroundTint="#F8F8F8"
    tools:context="com.example.Sam_pet_care.SignUp">

    <!--    <LinearLayout-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="match_parent"-->
    <!--        android:orientation="vertical"-->
    <!--        app:layout_constraintEnd_toEndOf="parent"-->
    <!--        app:layout_constraintTop_toTopOf="parent">-->

    <TextView
        android:id="@+id/textView2"
        android:layout_width="321dp"
        android:layout_height="75dp"
        android:layout_margin="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="44dp"
        android:fontFamily="@font/fredoka_one"
        android:gravity="center"
        android:text="REGISTRATION"
        android:textColor="#00BCD4"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="50dp" />

    <EditText
        android:id="@+id/txt_Sign_Email"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="654dp"
        android:background="#84B6CA"
        android:drawablePadding="10dp"
        android:ems="10"
        android:fontFamily="@font/fredoka_one"
        android:hint="Enter Email"
        android:inputType="textPersonName"
        android:padding="20dp"
        android:textColor="#272727"
        android:textColorHint="#ECECEC"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txt_SignPass"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="292dp"
        android:layout_marginEnd="9dp"
        android:background="#84B6CA"
        android:drawablePadding="10dp"
        android:ems="10"
        android:fontFamily="@font/fredoka_one"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textColor="#272727"
        android:textColorHint="#ECECEC"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_Sign_Email" />

    <EditText
        android:id="@+id/txt_SignConPass"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="71dp"
        android:background="#84B6CA"
        android:ems="10"
        android:fontFamily="@font/fredoka_one"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textColor="#272727"
        android:textColorHint="#ECECEC"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_SignPass" />

    <Spinner
        android:id="@+id/sp_UserType"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="261dp"
        android:background="#00BCD4"
        android:dropDownSelector="#00BCD4"
        android:padding="20dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/txt_Sign_Email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_SignUp"
        android:layout_width="305dp"
        android:layout_height="73dp"
        android:layout_gravity="center"
        android:layout_marginStart="52dp"
        android:layout_marginTop="628dp"
        android:backgroundTint="#44A8D1"
        android:fontFamily="@font/fredoka_one"
        android:text="Register"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="235dp"
        android:layout_height="152dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="132dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pets" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:fontFamily="@font/fredoka_one"
        android:text="Register Here with email and password"
        android:textColor="#44A8D1"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_SignUp" />

    <!--    </LinearLayout>-->
</androidx.constraintlayout.widget.ConstraintLayout>