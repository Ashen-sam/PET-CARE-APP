<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    tools:context="com.example.Sam_pet_care.LoginActivity1">

    <!--    <LinearLayout-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="match_parent"-->
    <!--        android:background="#fbc93d"-->
    <!--        android:backgroundTint="#fbc93d"-->
    <!--        android:orientation="vertical"-->
    <!--        app:layout_constraintTop_toTopOf="parent">-->

    <TextView
        android:id="@+id/textView4"
        android:layout_width="326dp"
        android:layout_height="84dp"
        android:layout_margin="50dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="28dp"
        android:fontFamily="@font/fredoka_one"
        android:gravity="center"
        android:text="Sign up to Pet Care"
        android:textColor="#00BCD4"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="263dp"
        android:layout_height="54dp"
        android:layout_margin="50dp"
        android:layout_marginStart="99dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="74dp"
        android:fontFamily="@font/fredoka_one"
        android:gravity="center"
        android:text="    Sign up with your Email and password"
        android:textColor="#00BCD4"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLogin1" />

    <EditText
        android:id="@+id/txt_L1_Email"
        android:layout_width="320dp"
        android:layout_height="58dp"
        android:layout_margin="10dp"
        android:layout_marginStart="82dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="41dp"
        android:background="#84B6CA"
        android:drawablePadding="10dp"
        android:ems="10"
        android:fontFamily="@font/fredoka_one"
        android:hint="Email "
        android:inputType="textPersonName"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <EditText
        android:id="@+id/txt_L1_Password"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:layout_marginStart="82dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="41dp"
        android:background="#84B6CA"
        android:drawablePadding="10dp"
        android:ems="10"
        android:fontFamily="@font/fredoka_one"
        android:hint="Password"
        android:inputType="textPersonName"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_L1_Email" />

    <Button
        android:id="@+id/btnLogin1"
        android:layout_width="288dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:layout_marginStart="60dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="22dp"
        android:background="#44A8D1"
        android:backgroundTint="#44A8D1"
        android:fontFamily="@font/fredoka_one"
        android:text="Login"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_L1_Password" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="288dp"
        android:layout_height="228dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="51dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/txt_L1_Email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:srcCompat="@drawable/animal" />

    <!--    </LinearLayout>-->
</androidx.constraintlayout.widget.ConstraintLayout>